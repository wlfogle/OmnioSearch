{
  "productName": "OmnioSearch",
  "version": "1.0.0",
  "identifier": "com.omniosearch.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "OmnioSearch - The All-Seeing File Search",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "auto"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "shortDescription": "AI-Enhanced All-Seeing File Search for Linux",
    "longDescription": "OmnioSearch is a revolutionary AI-powered file search engine for Linux that combines natural language processing with lightning-fast indexing to find any file instantly.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright Â© 2025 OmnioSearch Project",
    "license": "GPL-3.0-or-later",
    "publisher": "OmnioSearch Team"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$HOME/**", "/media/**", "/mnt/**", "/run/media/**"],
        "deny": ["/etc/**", "/proc/**", "/sys/**"]
      }
    },
    "shell": {
      "scope": [
        {
          "name": "fd",
          "cmd": "fd",
          "args": ["--type", "f", "--hidden", "--follow", ".", { "validator": "\\S+" }]
        },
        {
          "name": "ripgrep",
          "cmd": "rg",
          "args": ["--json", "--hidden", "--follow", { "validator": "\\S+" }]
        }
      ]
    }
  }
}
